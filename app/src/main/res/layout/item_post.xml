<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/ivImagePost"
        android:layout_width="305dp"
        android:layout_height="312dp"
        android:layout_below="@+id/tvUsernamePost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsernamePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        tools:text="bhavika" />

    <TextView
        android:id="@+id/tvDescriptionPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagePost"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        tools:text="yeah so this yeah so this yeah so this yeah so this yeah so this yeah so this " />

</RelativeLayout>