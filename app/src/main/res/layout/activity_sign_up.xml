<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="83dp"
        android:layout_toEndOf="@+id/tvUsername"
        android:ems="10"
        android:hint="enter username"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="35dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="67dp"
        android:layout_toEndOf="@+id/tvPassword"
        android:ems="10"
        android:hint="enter password "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="67dp"
        android:layout_toEndOf="@+id/tvEmail"
        android:ems="10"
        android:hint="enter email "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/etConfirmEmail"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="70dp"
        android:layout_toEndOf="@+id/tvConfirmEmail"
        android:ems="10"
        android:hint="enter email "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="59dp"
        android:text="Username:"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        android:text="Password: "
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:text="Email: "
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvConfirmEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:text="Confirm Email: "
        android:textSize="21sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:layout_below="@+id/ivProfilePreview"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="16dp"
        android:text="submit" />

    <Button
        android:id="@+id/btnCaptureProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvConfirmEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Take Profile Picture" />

    <ImageView
        android:id="@+id/ivProfilePreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnCaptureProfilePicture"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>