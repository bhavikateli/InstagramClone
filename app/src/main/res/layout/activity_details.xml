<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/ivImagePostDetails"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_below="@+id/tvUsernamePostDetails"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="-1dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsernamePostDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/ivProfilePictureDetails"
        android:textColor="#151313"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:text="bhavika" />

    <TextView
        android:id="@+id/tvDescriptionPostDetails"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCommentDetails"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="38dp"
        android:textColor="#131111"
        android:textSize="14.5sp"
        tools:text="yeah so this yeah so this yeah so this yeah so this yeah so this yeah so this " />

    <ImageView
        android:id="@+id/ivLikeDetails"
        android:layout_width="33dp"
        android:layout_height="28dp"
        android:layout_below="@+id/ivImagePostDetails"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ufi_heart"
        tools:srcCompat="@drawable/ufi_heart_active" />

    <ImageView
        android:id="@+id/ivCommentDetails"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:layout_below="@+id/ivImagePostDetails"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/tvLikeCountDetails"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivDirectMessageDetails"
        android:layout_width="47dp"
        android:layout_height="37dp"
        android:layout_below="@+id/ivImagePostDetails"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivCommentDetails"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/ivProfilePictureDetails"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTimeStampDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescriptionPostDetails"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:textSize="13sp"
        tools:text="10 hours ago" />

    <TextView
        android:id="@+id/tvLocationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernamePostDetails"
        android:layout_marginStart="9dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/ivProfilePictureDetails"
        android:textColor="#0C0909"
        tools:text="New York, USA" />

    <TextView
        android:id="@+id/tvLikeCountDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagePostDetails"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ivLikeDetails"
        android:textColor="#151212"
        tools:text="50" />

</RelativeLayout>